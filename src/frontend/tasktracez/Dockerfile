FROM node:20-alpine

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

# ARG NODE_ENV
ARG NEXT_PUBLIC_BACKEND_URL
ARG NEXT_PUBLIC_BACKEND_API_PREFIX
# ENV NODE_ENV=${NODE_ENV}
ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}
ENV NEXT_PUBLIC_BACKEND_API_PREFIX=${NEXT_PUBLIC_BACKEND_API_PREFIX}

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]
